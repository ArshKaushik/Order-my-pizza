<section class="cart py-16">

    <% if (session.cart) { %> 
        <div class="order container mx-auto w-1/2">

            <div class="flex items-center border-b border-gray pb-4">
                <img src="/img/cart-black.png" alt="cart-black">
                <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
            </div>

            <div class="pizza-list">
                <% for(let pizza of Object.values(session.cart.items)) { %> <!-- return an array of values of the object -->
                    <div class="flex items-center my-8">
                        <img class="w-24" src="/img/<%= pizza.item.image %>" alt="pizza">
                        <div class="flex-1 ml-4">
                            <h1><%= pizza.item.name %></h1>
                            <span><%= pizza.item.size %></span>
                        </div>
                        <span class="flex-1"><%= pizza.qty %> Pcs</span>
                        <span class="font-bold text-lg">â‚¹<%= pizza.item.price * pizza.qty%></span>
                    </div>
                <% } %> 
            </div>

            <hr>

            <div class="text-right py-4">

                <div>
                    <span class="text-lg font-bold">Total amount:</span>
                    <span class="amount text-2xl font-bold ml-2">â‚¹<%= session.cart.totalPrice %></span>
                </div>

                <% if(user) { %> 
                    <div>
                        <form action="/orders" method="POST" class="mt-12">
                            <input name="address" class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Address">
                            <input name="phone" class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Phone no.">
                            <div>
                                <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order Now</button>
                            </div>
                        </form>
                    </div>
                <% } else { %> 
                    <a href="/login" class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login to continue</a>
                <% } %> 

            </div>
        </div>
    <% } else { %> 
        <div class="empty-cart py-6">

            <div class="container mx-auto text-center">
                <h1 class="text-3xl font-bold mb-2">Cart empty ðŸ˜•</h1>
                
                <p class="text-gray-500 text-lg mb-12">You probably haven't ordered a pizza yet. <br>
                To order a pizza, go to the home page.
                </p>

                <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="">
                
                <a href="/" class="inline-block px-6 py-3 rounded-full font-bold text-white mt-12 btn-primary">Go back</a>
            </div>
            
        </div>
    <% } %> 

</section>